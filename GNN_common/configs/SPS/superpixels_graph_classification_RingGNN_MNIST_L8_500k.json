{
    "gpu": {
        "use": true,
        "id": 0
    },
    
    "model": "RingGNN",
    "dataset": "MNIST",
    
    "out_dir": "out/superpixels_graph_classification/",
    
    "params": {
        "seed": 41,
        "epochs": 1000,
        "batch_size": 4,
        "train_size": 2500,
        "val_size": 2500,
        "test_size": 2500,
        "init_lr": 0.0001,
        "lr_reduce_factor": 0.5,
        "lr_schedule_patience": 2000,
        "min_lr": 1e-6,
        "weight_decay": 0.0,
        "print_epoch_interval": 5,
        "max_time": 12
    },
    
    "net_params": {
        "L": 8,
        "hidden_dim": 37,
        "radius": 2,
        "residual": true,
        "dropout": 0.0,
        "layer_norm": false
    }
}